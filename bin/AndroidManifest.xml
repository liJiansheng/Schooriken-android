<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angelhack.ri.schooriken"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >
        <service
            android:name=".UpdateData"
            android:exported="false"/>
        <activity
            android:name="com.angelhack.ri.schooriken.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.angelhack.ri.schooriken.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.angelhack.ri.schooriken.AddGroup"
            android:label="@string/title_activity_add"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.angelhack.ri.schooriken.CCA_tabActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.angelhack.ri.schooriken.Class_tabActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.angelhack.ri.schooriken.Others_tabActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
        </activity>
        <receiver android:name=".schooReceiver"/>
    </application>

</manifest>
